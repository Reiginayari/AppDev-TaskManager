<div id="app">
    <aside class="sidebar">
        <div class="user-profile">
            <span id="user-name"></span>
            <button id="logout-btn">Logout</button>
        </div>
        <input type="text" id="task-search" placeholder="Search tasks" class="search-bar">
        <div class="add-list-container">
            <button id="add-task" class="add-list-button">+ New Task</button>
            <button id="manage-cotaskers" class="add-list-button">Manage Co-taskers</button>
        </div>
    </aside>

    <main class="main-content">
        <header class="content-header">
            <h1 id="section-title">Tasks</h1>
            <div class="header-right">
                <div class="filters">
                    <label for="filter-priority">Priority:</label>
                    <select id="filter-priority">
                        <option value="all">All</option>
                        <option value="high">High</option>
                        <option value="medium">Medium</option>
                        <option value="low">Low</option>
                    </select>
                    <label for="filter-date">Due Date:</label>
                    <input type="date" id="filter-date">
                </div>
                <div class="notification-icon">
                    <i class="fas fa-bell"></i>
                    <span class="notification-count">0</span>
                </div>
            </div>
        </header>
        <div id="notifications-container">
            <h4>Notifications</h4>
            <div id="notifications-list"></div> 
            <div class="notification-actions">
                <button onclick="markAllNotificationsAsRead()">Mark All as Read</button>
                <button onclick="markAllNotificationsAsUnread()">Mark All as Unread</button>
            </div>
        </div>
        <div id="task-list" class="task-list"></div>
    </main>
</div>

<div id="task-modal" class="modal">
    <div class="modal-content">
        <h2>Create New Task</h2>
        <form id="task-form">
            <input type="text" name="title" placeholder="Task Title" required>
            <textarea name="description" placeholder="Description" required></textarea>
            <input type="datetime-local" name="dueDate" required>
            <select name="priority" required>
                <option value="low">Low</option>
                <option value="medium">Medium</option>
                <option value="high">High</option>
            </select>
            <div class="assign-cotaskers">
                <label>Assign to Co-taskers:</label>
                <div id="task-cotaskers" class="task-cotaskers"></div>
            </div>
            <button type="submit">Create Task</button>
            <button type="button" class="close-modal">Cancel</button>
        </form>
    </div>
</div>

<div id="cotasker-modal" class="modal">
    <div class="modal-content">
        <h2>Manage Co-taskers</h2>
        <div class="search-container">
            <input type="text" id="cotasker-search" placeholder="Search by email">
        </div>
        <div id="search-results" class="search-results"></div>
        <h3>Your Co-taskers</h3>
        <div id="co-tasker-list" class="co-tasker-list"></div>
        <button type="button" class="close-modal">Close</button>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
